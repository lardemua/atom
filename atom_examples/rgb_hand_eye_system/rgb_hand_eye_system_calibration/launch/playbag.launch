<!--
@file playbag.launch Plays back the bag file.
    Sets up image decompressors if needed, reads the urdf robot description.

@arg bag_file  Absolute path to the playing bag.
    default: $(env ROS_BAGS)/rgb_hand_eye_system/train.bag
@arg bag_start Playback starting time (in seconds). default: 0.0
@arg bag_rate  Playback rate. default: 1.0
@arg use_tfs  Use tfs in the bag file or generate new ones using the urdf, joint state messages and the robot state publisher. default: False
-->

<launch>

    <arg name="bag_file" default="$(env ROS_BAGS)/rgb_hand_eye_system/train.bag"/>
    <arg name="bag_start" default="0"/>
    <arg name="bag_rate" default="1"/>
    <arg name="optimized" default="false"/>
    <arg name="rviz_file" default="$(find rgb_hand_eye_system_calibration)/rviz/set_initial_estimate.rviz"/>
    <arg name="description_file" default="$(find rgb_hand_eye_system_calibration)/urdf/initial_estimate.urdf.xacro"
         unless="$(arg optimized)"/>
    <arg name="description_file" default="$(find rgb_hand_eye_system_calibration)/urdf/optimized.urdf.xacro"
         if="$(arg optimized)"/>

    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    <!-- Throttle topics -->
    <node pkg="topic_tools" type="throttle" name="throttler_rgb_hand"
          args="messages /rgb_hand/image_raw/compressed_to_throttle 10 /rgb_hand/image_raw/compressed"/>
    
    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    <!-- Load robot description and tf generators -->
    <param name="robot_description" command="$(find xacro)/xacro $(arg description_file)"/>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    <!-- Playback the bag file -->
    <param name="/use_sim_time" value="true"/>

    <!-- Generate transformatiosn from the xacro and joint state msgs, use tfs as ground truth  -->
    <node pkg="rosbag" type="play" name="rosbag_play" output="screen"
              args=" $(arg bag_file) --clock -r $(arg bag_rate) -l -s $(arg bag_start) -d 2 /tf:=/tf_ground_truth /tf_static:=/tf_static_ground_truth /rgb_hand/image_raw/compressed:=/rgb_hand/image_raw/compressed_to_throttle"/>
    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->

    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    <!-- Image Topic Decompression -->
    <node pkg="image_transport" type="republish" name="decompressor_rgb_hand" output="screen"
          args="compressed in:=/rgb_hand/image_raw raw out:=/rgb_hand/image_raw"/>
    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    <!-- Visualization -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rviz_file)" required="true"/>
    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->

</launch>